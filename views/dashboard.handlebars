<section>
  <h2>Create A New Post</h2>

  <form class="new-post-form">
    <div>
      <label for="post-title">Title</label>
        <input type="text" id="post-title" name="post-title" />
    </div>
    <div>
      <label for="post-url">Message</label>
      <input type="text" id="post-url" name="post-url" />
    </div>
    <button type="submit" class="btn btn-primary">Create Post</button>
  </form>
</section>

{{#if posts.length}}
<section>
  <h2>Your Posts</h2>
  <div>
    <ol>
			{{#each posts as |post|}}
      <li>
        {{> postdata post }}
        <button class="edit btn-primary">
        <a href="/dashboard/edit/{{post.id}}" id="edit-post-btn">Edit Post</a>
        </button>
      </li>
      {{/each}}
    </ol>
  </div>
</section>
{{/if}}

<script src="/javascript/addpost.js"></script>